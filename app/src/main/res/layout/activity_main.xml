<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hola Alex"/>


    <TextView
        android:id="@+id/descountMessage"
        android:text="tienes un descuento de "
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSubcribeAndorid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="subcribete android"
        android:onClick="subcribeAndroid"
        />

    <Button
        android:id="@+id/btnSubcribefirebase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="subcribete firebase"
        android:onClick="subcribeFirebase"
        />



</LinearLayout>